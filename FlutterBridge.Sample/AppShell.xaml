<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlutterBridge.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlutterBridge.Sample"
    Shell.FlyoutBehavior="Disabled"
    Title="FlutterBridge.Sample">

    <TabBar>
        <Tab Title="Flutter Page" Icon="appicon.png">
            <ShellContent
                Title="Flutter Page"
                ContentTemplate="{DataTemplate local:FlutterPage}"
                Route="FlutterPage" />
        </Tab>
        <Tab Title="Maui Page" Icon="appicon.png">
            <ShellContent
                Title="Maui Page"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </TabBar>
</Shell>
